{
  "name": "authorization-server",
  "version": "0.1.0",
  "description": "",
  "main": "src/server.js",
  "scripts": {
    "start": "node $NODE_DEBUG_OPTION src/server.js",
    "dev": "cross-env NODE_ENV=development node src/server.js",
    "postinstall": "npm run ramldoc",
    "tunnel": "cross-env lt --port 3000",
    "test": "NODE_ENV=development mocha --require co-mocha --ui bdd 'src/**/*.spec.js'",
    "coverage": "nyc npm run test",
    "commit": "git cz",
    "lint": "eslint src/",
    "ramldoc": "raml2html --theme raml2html-default-theme raml/api.raml > docs/api.html",
    "migrations:up": "chmod +x migrations.sh && ./migrations.sh up",
    "migrations:down": "chmod +x migrations.sh && ./migrations.sh down"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oleksijfomin/authorization-server.git"
  },
  "author": "oleksijfomin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oleksijfomin/authorization-server/issues"
  },
  "homepage": "https://github.com/oleksijfomin/authorization-server#readme",
  "keywords": [
    "authorization",
    "server",
    "oauth",
    "sdk"
  ],
  "pre-push": [
    "lint",
    "test",
    "coverage"
  ],
  "dependencies": {
    "body-parser": "^1.18.2",
    "co": "^4.6.0",
    "compose-middleware": "^3.0.0",
    "compression": "^1.7.1",
    "cookie-parser": "^1.4.3",
    "crypto": "1.0.1",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "express-raml-store": "^1.2.2",
    "express-request-id": "^1.4.0",
    "express-session": "^1.15.6",
    "localtunnel": "^1.8.3",
    "lodash": "^4.17.4",
    "mongodb": "^2.2.33",
    "mongodb-migrate": "^2.0.2",
    "nconf": "^0.8.5",
    "osprey": "^0.4.1",
    "osprey-method-handler": "^0.11.1",
    "osprey-mock-service": "^0.2.1",
    "passport": "^0.4.0",
    "passport-facebook": "^2.1.1",
    "passport-linkedin-oauth2": "^1.5.0",
    "qs": "^6.5.1",
    "raml-1-parser": "^1.1.35",
    "raml2html": "^6.4.2",
    "raml2html-default-theme": "^2.5.0",
    "throng": "^4.0.0",
    "uuid": "^3.1.0",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "co-mocha": "^1.2.1",
    "commitizen": "^2.9.6",
    "compress": "^0.99.0",
    "cross-env": "^5.1.0",
    "cz-conventional-changelog": "^2.0.0",
    "eslint-config-udosoft": "github:oleksijfomin/eslint-config-udosoft#0.1",
    "eslit": "^5.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^4.0.1",
    "mocha-junit-reporter": "^1.15.0",
    "nock": "^9.0.24",
    "nyc": "^11.2.1",
    "pre-push": "^0.1.1",
    "sinon": "^4.0.1",
    "sinon-chai": "^2.14.0"
  },
  "engines": {
    "node": "8.9.0",
    "npm": "5.5.1"
  }
}
